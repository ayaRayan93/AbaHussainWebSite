@model AbaHussainWebSite.Models.Basics
<section class="hero-wrap hero-wrap-2" style="background-image: url('../images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container-fluid">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">اتصل بنا </h1>
                <p class="breadcrumbs">  <span class="mr-2"> <i class="ion-ios-arrow-back"></i> <a href="index.html">الرئيسية </a></span> <span> <i class="ion-ios-arrow-back"></i> اتصل بنا </span></p>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section ftco-no-pt ftco-no-pb contact-section" dir="rtl" style="text-align: right;">
    <div class="container-fluid">
        <div class="row d-flex align-items-stretch no-gutters">
            <div class="col-md-6 p-4 p-md-5 order-md-last bg-light">
                <form action="#">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="اسمك">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="بريدك الالكتروني">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="الموضوع">
                    </div>
                    <div class="form-group">
                        <textarea name="" id="" cols="30" rows="7" class="form-control" placeholder="الرساله"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ارسال" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
            </div>
            <div class="col-md-6 d-flex align-items-stretch">
                <div id="map"></div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section contact-section" dir="rtl" style="text-align: right;">
    <div class="container-fluid">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-12 mb-4">
                <h2 class="h4">معلومات الاتصال</h2>
            </div>
            <div class="w-100"></div>
            <div class="col-md-3 d-flex">
                <div class="bg-light d-flex align-self-stretch box p-4">
                    <p><span>العنوان :</span>@Html.DisplayFor(modelItem => modelItem.Address)</p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="bg-light d-flex align-self-stretch box p-4">
                    <p><span>التليفون :</span> <a href="tel://1234567920">@Html.DisplayFor(modelItem => modelItem.callus)</a></p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="bg-light d-flex align-self-stretch box p-4">
                    <p><span>البريد الالكتروني :</span> <a href="mailto:info@yoursite.com">@Html.DisplayFor(modelItem => modelItem.email)</a></p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="bg-light d-flex align-self-stretch box p-4">
                    <p><span>الموقع :</span> <a href="#">@Html.DisplayFor(modelItem => modelItem.website)</a></p>
                </div>
            </div>
        </div>
    </div>
</section>