@model IEnumerable<AbaHussainWebSite.Models.Services>
@foreach (var item in Model)
{
    <div class="col-md-3 d-flex services align-self-stretch p-4 ftco-animate">
        <div class="media block-6 d-block text-center" style="margin:0px">
            <div class="icon d-flex justify-content-center align-items-center">
                <img src="@Url.Content(item.img)" width="50px" height="50px" />
            </div>
            <div class="media-body p-2 mt-3">
                <a class="nav-link"><h3 class="heading">@Html.ActionLink(item.Name + " ", "GetProducts", "Home", new { Service_Name = item.Name.ToString(), subcat = "" }, null)</h3></a>
                <p>@Html.DisplayFor(modelItem => item.textServe)</p>
            </div>
        </div>
    </div>
}