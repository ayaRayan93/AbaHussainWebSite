@model AbaHussainWebSite.Models.SocialMedia

@{
    ViewBag.Title = "تعديل مواقع التواصل";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2 style="text-align:right">تعديل</h2>

@using (Html.BeginForm("Edit", "Dash", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="" dir="rtl" style="margin:auto auto; text-align:right;width:600px">
            <p style="color:red">@ViewBag.Emsg</p>
            <div class="form-group">
                @Html.HiddenFor(model => model.SocialID)

                <div class="col-md-12">
                    <label>مواقع التواصل الاجتماعي </label>
                    @Html.DropDownListFor(m => m.icon, ViewBag.listSocial as IEnumerable<SelectListItem>, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-12">
                    <label>الرابط</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon3"><i class="fas fa-link"></i></span>
                        </div>
                        @Html.EditorFor(model => model.link, new { htmlAttributes = new { @class = "form-control" } })


                        @*<input type="text" class="form-control" id="link" name="link" aria-describedby="basic-addon3">*@
                    </div>

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="تعديل" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>

}







