@model AbaHussainWebSite.Models.setting

@{
    ViewBag.Title = "الاعدادات";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<style>
    h2 {
        text-align: right;
    }

    .texts {
        border: 1px solid gray;
        margin: auto auto;
        width: 50%;
        border-radius: 12px;
        padding: 2%;
        text-align: right;
    }
</style>
@using (Html.BeginForm("mainText"))
{
    @Html.AntiForgeryToken()
    <p style="color:red">@ViewBag.Emsg</p>
    <p style="color:green">@ViewBag.msg</p>
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h2>الاعدادات</h2>
        <div class="texts">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)
            <p style="color:blue">الاعدادات</p>
            <div class="form-group">

                <div class="col-md-12">
                    <label class="control-label">  اسم المستخدم</label>
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <label class="control-label">كلمة المرور</label>
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12" style="text-align:center">
                    <input type="submit" value="حفظ" class="btn btn-outline-info" />
                </div>
            </div>
        </div>
    </div>

}


