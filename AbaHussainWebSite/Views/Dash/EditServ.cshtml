@model AbaHussainWebSite.Models.Services

@{
    ViewBag.Title = "الخدمات";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<script type="text/javascript">
// function to show image when he choose one
   function show(input) {
      if (input.files && input.files[0]) {
      var filerdr = new FileReader();
      filerdr.onload = function (e) {
         $('#ii').attr('src', e.target.result);
      }
      filerdr.readAsDataURL(input.files[0]);
   }
   }


</script>
<h2 style="text-align:right">تعديل</h2>

@using (Html.BeginForm("EditServ", "Dash", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
   
    <div class="form-horizontal">
        <div class="" dir="rtl" style="margin:auto auto; text-align:right;width:600px">
            <p style="color:red">@ViewBag.Emsg</p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ServicesID)
            <div class="form-group">
                <label class="control-label ">
                    صورة الخدمة
                </label>
                @{if (Model.img != null)
                    { <img src="@Url.Content(Model.img)" width="100px" height="100px" id="ii" />}}
                <input type="file" name="imgfile" class="form-control" onchange="show(this)"/>
                @Html.ValidationMessageFor(model => model.img, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <label class="control-label">  عنوان الخدمة الرئيسي بالعربي </label>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <label class="control-label">  عنوان الخدمة الرئيسي بالانجليزي </label>
                    @Html.EditorFor(model => model.enName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.enName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <label class="control-label">وصف الخدمة بالعربي</label>
                    @Html.EditorFor(model => model.textServe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.textServe, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <label class="control-label"> وصف الخدمة بالانجليزي </label>
                    @Html.EditorFor(model => model.entxtServe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.textServe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="حفظ التغيرات" class="btn btn-primary" />
                </div>
            </div>
        </div>

    </div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
